<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         verbose="true">

  <testsuites>
    <testsuite name="nuxeo-php-client integration tests">
      <directory suffix="Test.php">web/modules/nuxeo/tests</directory>
    </testsuite>
  </testsuites>

  <php>
    <includePath>tests/resources</includePath>
    <env name="SIMPLETEST_BASE_URL" value="http://127.0.0.1:8888"/>
    <env name="SIMPLETEST_DB" value="sqlite://sites/default/files/test.sqlite"/>
    <env name="BROWSERTEST_OUTPUT_DIRECTORY" value="sites/default/files/simpletest"/>
  </php>
</phpunit>
